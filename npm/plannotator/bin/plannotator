#!/usr/bin/env node

const { execFileSync } = require('child_process');
const path = require('path');
const fs = require('fs');

const PLATFORMS = {
  'darwin-arm64': '@plannotator/darwin-arm64',
  'darwin-x64': '@plannotator/darwin-x64',
  'linux-x64': '@plannotator/linux-x64',
  'win32-x64': '@plannotator/win32-x64',
};

const platformKey = `${process.platform}-${process.arch}`;
const packageName = PLATFORMS[platformKey];

if (!packageName) {
  console.error(`Unsupported platform: ${platformKey}`);
  console.error(`Supported platforms: ${Object.keys(PLATFORMS).join(', ')}`);
  process.exit(1);
}

let binaryPath;
try {
  // Try to find the platform-specific package
  const packagePath = require.resolve(`${packageName}/package.json`);
  const packageDir = path.dirname(packagePath);
  const binName = process.platform === 'win32' ? 'plannotator.exe' : 'plannotator';
  binaryPath = path.join(packageDir, 'bin', binName);
} catch (e) {
  console.error(`Failed to find ${packageName}. Please reinstall plannotator.`);
  console.error(`Run: npm install -g plannotator`);
  process.exit(1);
}

if (!fs.existsSync(binaryPath)) {
  console.error(`Binary not found at ${binaryPath}`);
  process.exit(1);
}

// Execute the binary with all arguments passed through
try {
  execFileSync(binaryPath, process.argv.slice(2), { stdio: 'inherit' });
} catch (e) {
  process.exit(e.status || 1);
}
